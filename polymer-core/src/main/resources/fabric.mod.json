{
  "schemaVersion": 1,
  "id": "polymer-core",
  "version": "${version}",
  "name": "Polymer (Core)",
  "description": "Library for creation of better server side content!",
  "authors": [
    "Patbox"
  ],
  "contributors": [
    "aws404"
  ],
  "contact": {
    "homepage": "https://pb4.eu",
    "sources": "https://github.com/Patbox/polymer",
    "issues": "https://github.com/Patbox/polymer/issues"
  },

  "license": "LGPLv3",
  "icon": "assets/icon.png",
  "environment": "*",
  "accessWidener": "polymer-core.accesswidener",
  "entrypoints": {
    "main": [
      "eu.pb4.polymer.core.impl.PolymerMod"
    ],
    "client": [
      "eu.pb4.polymer.core.impl.PolymerMod"
    ],
    "rei_client": [
      "eu.pb4.polymer.core.impl.client.compat.ReiCompatibility"
    ],
    "appleskin": [
      "eu.pb4.polymer.core.impl.client.compat.AppleSkinCompatibility"
    ],
    "jade": [
      "eu.pb4.polymer.core.impl.client.compat.JadeCompatibility"
    ],
    "jei_mod_plugin": [
      "eu.pb4.polymer.core.impl.client.compat.JeiCompatibility"
    ],
    "emi": [
      "eu.pb4.polymer.core.impl.client.compat.EmiCompatibility"
    ],
    "polymc": [
      "eu.pb4.polymer.core.impl.compat.polymc.PolyMcEntrypoint"
    ]
  },
  "mixins": [
    "polymer-core.mixins.json"
  ],

  "depends": {
    "polymer-common": ">=${version}",
    "fabricloader": ">=0.14.0"
  },
  "custom": {
    "modmenu": {
      "badges": [ "library" ],
      "discord": "https://pb4.eu/discord",
      "parent": "polymer-bundled",
      "update_checker": false
    }
  }
}
